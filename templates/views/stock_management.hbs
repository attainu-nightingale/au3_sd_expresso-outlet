<!-- Check Particular Stock Modal -->
    <div class="modal fade" id="showstock-Modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header bg-warning">
        <h5 class="modal-title">Show Stock</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
            <div>
                <label for="userinput" id="label">Select Item</label>
                <div class="input-group mb-3" id="fordatalist">
                    <input type="text" id="userinput" list="menu-list" class="form-control input-lg" name="user-input" placeholder="Choose">
                    <button class="btn btn-success" type="button" id="submit">Go</button>
                </div>

                <datalist id="menu-list" class="required-entry">
                    {{#each data}}
                        {{#each menu_items}}
                    <option>{{this.menu_item_name}}</option>
                     {{/each}}
                    {{/each}}   
                </datalist>      
            </div> 

            <div id="search-result">

            </div>
      </div>
      <div class="modal-footer bg-warning">
        <button type="button" class="btn btn-danger" data-dismiss="modal" onclick=location.reload()>Close</button>
        {{!-- <button type="button" class="btn btn-primary" id="save">Save</button> --}}
      </div>
    </div>
  </div>
</div>
 

