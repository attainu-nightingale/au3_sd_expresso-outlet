<!-- Delete Order Modal -->

 <div class="modal fade" id="deleteOrderModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header bg-warning">
        <h5 class="modal-title">Delete Order ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="del-confirm">
          <p >Are you sure you want to proceed with this delete ?</p>
        </div>
        <div class="modal-body" id="orderdel-successmsg">
            <p>Order deleted successfully !</p>
        </div>
        <div class="modal-footer bg-warning" id="confirm-footer">
        <button type="button" class="btn btn-success" id="yes-del">Yes</button>
        <button type="button" class="btn btn-danger" id="no-del" data-dismiss="modal">No</button>
        </div>
      <div class="modal-footer bg-warning" id="del-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal" onclick=location.reload()>Close</button>
      </div>
    </div>
  </div>
</div>


<!-- Add New Order Modal -->
    <div class="modal fade" id="addorderModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header bg-warning">
        <h5 class="modal-title">New Order</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form role="form" id="order-form" method="" action="">
          <div class="form-group">
                <label class="control-label">Order ID</label>
                        <div>
                            <input type="text" id="order-id" class="form-control input-lg" name="order_id">
                        </div>
            </div> 
            <div class="form-group">
                <label class="control-label">Table No.</label>
                        <div>
                            <input type="number" id="table-no" class="form-control input-lg" name="table_no">
                        </div>
            </div> 
        </form>
      </div>
      <div class="modal-footer bg-warning">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="next-btn" onclick="window.location.href='/manager/order-management/new-order/'">Next</button>
      </div>
    </div>
  </div>
</div>