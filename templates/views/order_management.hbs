<!-- Page Content -->
<div id="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 shadow-lg p-3 mb-5 rounded bg-white">
                <h1 class="display-6">Order Management Panel</h1><br/>
                 <p>This control center can be used to add a new order for a table and prepare the bill.</p>
                 <button class="btn btn-success" id="add-order" data-toggle="modal" data-target="#addorderModal">Add New Order</a>
                 <button class="btn btn-primary" id="list-orders">List Orders</button>
                 <a href="#menu-toggle" class="btn btn-danger" id="menu-toggle">Toggle Menu</a>
            </div>
        </div>
        <div class="row" id="order-list">
            <div class="col-lg-12 shadow-lg p-3 mb-5 rounded bg-dark">
                 <button class="btn btn-warning" id="hide-orders">Hide</button>
                    <br/><br/>
                <div class="card-deck">
                 {{#each data}}
                 
                 <div class="card col-4" style="min-width:25%;margin-top:10px;">
                     
                    <div class="card-body shadow-lg p-3 mb-5 rounded bg-white">
                        <p class="order-oid">{{this._id}}</p>
                        <h5 class="card-title text-center">Order ID : {{this.orderID}}</h5>
                        <h5 class="card-title text-center">Table No. : {{this.table_no}}</h5>
                        <p class="card-text text-center">Grand Total : {{this.grand_total}}</p><br/>
                        <a href="/manager/order-management/order/{{this._id}}" class="view-btn btn btn-dark">View</a>
                        <a href="#" class="delete-btn btn btn-danger" data-toggle="modal" data-target="#deleteOrderModal">Delete</a>
                    </div>
                </div>
                {{/each}}
            </div>
            </div>
        </div>        
    </div>
</div>
        <!-- /#page-content-wrapper -->

</div>
