<!-- Page Content -->
<div id="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 shadow-lg p-3 mb-5 rounded bg-white">
                <h1 class="display-6">Employee Management Panel</h1><br/>
                 <p>This control center can be used to view/edit/delete an employee's profile or add a new employee.</p>
                 <button class="btn btn-success" id="add-employee" data-toggle="modal" data-target="#addModal">Add Employee</a>
                 <button class="btn btn-primary" id="list-employees">List Employees</button>
                 <a href="#menu-toggle" class="btn btn-danger" id="menu-toggle">Toggle Menu</a>
            </div>
        </div>
        <div class="row employee-list">
                <div class="col-lg-12 shadow-lg p-3 mb-5 rounded bg-dark">
                    <button class="btn btn-warning" id="hide-employees">Hide</button>
                    <br/><br/>
                <div class="card-deck">
                 {{#each data}}
                 
                 <div class="card col-4" style="min-width:25%;margin-top:10px;">
                    <div class="card-body shadow-lg p-3 mb-5 rounded bg-white">
                        <h5 class="getId card-title text-center">{{this.emp_id}}</h5>
                        <h5 class="getName card-title text-center">{{this.emp_name}}</h5>
                        <p class="card-text text-center">
                            {{this.job}}<br/>                         
                        </p>
                        <a href="/manager/employee-management/employee/{{this.emp_id}}" class="view-btn btn btn-dark">View</a>
                        <a href="#" class="delete-btn btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</a>
                    </div>
                </div>
                {{/each}}
            </div>
           </div>
           </div> 
    </div>
