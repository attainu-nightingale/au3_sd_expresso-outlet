
<div class="container" id="table-box" style="background-color: #ffcd94;">
        <div class="row">
            <div class="col-lg-12 shadow-lg p-3 mb-5 rounded bg-white">
                
                <div class="d-inline" id="button-box">
                    <a href="#" class="edit-btn btn btn-md btn-info" data-toggle="modal" data-target="#updateModal">Edit</a>
                    <a href="/manager/employee-management" class="btn btn-md btn-danger" id="back-btn">Back</a>
                    <a href="#" class="timesheets-btn btn btn-md btn-warning">View Timesheets</a>
                </div>
                <br/>
                
                <h3 class="text-center text-info float-left">Employee Info</h3>
                    
                <br/><br/>

                <div class="container">
                    {{#each data}}
                    <img src="{{this.profile_pic}}"></img>
                    {{/each}}
                    <br/><br/>
                <table class="table table-dark table-striped table-hover">
                <tbody>
                    {{#each data}}
                    <tr>
                        <th>Employee ID</td>
                        <td id="forid">{{this.emp_id}}</td>
                    </tr>
                    <tr>
                        <th>Name</td>
                        <td id="forname">{{this.emp_name}}</td>
                    </tr>
                    <tr>
                        <th>Age</td>
                        <td id="forage">{{this.emp_age}}</td>
                    </tr>
                    <tr>
                        <th>Email</td>
                        <td id="foremail">{{this.email}}</td>
                    </tr>
                    <tr>
                        <th>Gender</td>
                        <td id="forgender">{{this.emp_gender}}</td>
                    </tr>
                    <tr>
                        <th>Address</td>
                        <td id="foraddr">{{this.emp_addr}}</td>
                    </tr>
                    <tr>
                        <th>Role</td>
                        <td id="forrole">{{this.emp_role}}</td>
                    </tr>
                    <tr>
                        <th>Job</td>
                        <td id="forjob">{{this.job}}</td>
                    </tr>
                    <tr>
                        <th>Username</td>
                        <td id="forusername">{{this.username}}</td>
                    </tr>
                    <tr>
                        <th>Joining date</td>
                        <td id="forjd">{{this.joining_date}}</td>
                    </tr>
                    <tr>
                        <th>Employee Of month</td>
                        <td id="forempofmon">{{this.is_employee_of_month}}</td>
                    </tr>

                    {{/each}}
                </tbody>
            </table>
        </div>
  
            
            </div>
        </div>
    </div>






<!-- Update Modal -->

<div class="modal fade" id="updateModal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header bg-warning">
        <h5 class="modal-title">Edit Employee</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="update-form" role="form" method="POST" action="" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label">Name</label>
                        <div>
                            <input type="text" id="update-name" class="form-control input-lg" name="name">
                        </div>
            </div> 
            <div class="form-group">
            <label class="control-label">Age</label>
                        <div>
                            <input type="number" id="update-age" class="form-control input-lg" name="age">
                        </div>
            </div>
            <div class="form-group">
            <label class="control-label">Email</label>
                        <div>
                            <input type="email" id="update-email" class="form-control input-lg" name="email">
                        </div>
            </div>
            <div class="form-group">
            <label class="control-label">Address</label>
                        <div>
                            <input type="text" id="update-address" class="form-control input-lg" name="address">
                        </div>
            </div>
            <div class="form-group">
            <label class="control-label">Job</label>
                        <div>
                            <input type="text" id="update-job" class="form-control input-lg" name="job">
                        </div>
            </div>
            <div class="form-group">
            <label class="control-label">Username</label>
                        <div>
                            <input type="text" id="update-username" class="form-control input-lg" name="username">
                        </div>
            </div>
        
            <div class="form-group">
                <label class="control-label">Employee of the month</label>
                        <div>
                            <select class="form-control" id="update-empofmonth" name="empofmonth">
                                <option value="false">false</option>
                                <option value="true">true</option>
                            </select>   
                        </div>
            </div>
            <p id="update-successmsg">Employee details changed successfully !</p>
            </form> 
      </div>
        <div class="modal-footer bg-warning">
        <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick=location.reload()>Close</button>
        <button type="button" class="btn btn-primary" id="update-save">Save</button>
      </div>
    </div>
  </div>
</div>